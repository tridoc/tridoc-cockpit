<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title tridoc cockpit
    link(rel="stylesheet", href="style.css")
    script(src="https://mozilla.github.io/pdf.js/build/pdf.js")
    
  body.grid
    .header
      span tridoc cockpit

    .main.s__id
      .box.title
        h1#current-title
        #current-tags.s__th
      #document
        #pdf-text-layer
      .comments
        .box.box-flexible Comments not yet supported by Backend

    .tags
      .box
        input(disabled,placeholder="Search for tags",type="text")#search-tags.input.searchbox
      .box.box-flexible
        input(placeholder="url",type="text")#server-url.input
        input(placeholder="username",type="text")#server-username.input
        input(placeholder="password",type="password")#server-password.input
        button#server-save save
      .box#tag-list(hidden)
      .box.box-flexible
        h3 Search syntax:
        h4 abc
        p Matches documents where "abc" can be found in text or title
        h4 #abc
        p Matches documents with tag "abc"
        h4 ##abc
        p Matches documents with tag "#abc"
        h4 !#abc
        p Matches documents without tag "abc"
        h4 \#abc
        p Matches where "#abc" can be found in text or title
      i.mi-cal
      i.mi-num
      i.mi-tag
      i.mi-taf
      i.mi-tan
      i.mi-tar

    .documents
      .box
        input(placeholder="Search in documents",type="text")#search-documents.input.searchbox
      ul#document-list.list
        .loader

    .footer

    script(src="index.js")